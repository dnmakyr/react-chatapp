{
    "compilerOptions": {
        "target": "ES6",
        "module": "ESNext",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": false,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"],
}